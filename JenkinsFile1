node('nodes'){
   def mavenHome = tool name: "maven3.8.6"
   properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')), [$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([pollSCM('* * * * *')])])
   try{
      slcakNotification("STARTED")
    stage('getCode'){
      git branch: 'development', credentialsId: '57cfc1ff-9f3e-4f38-b2c7-6b70cab539ff', url: 'https://github.com/AgeswarRaoChenna/maven-web-application.git'
    }
    stage('buildPackage'){
      sh "${mavenHome}/bin/mvn clean package"
    }
    stage('sonarQubeReport'){
      sh "${mavenHome}/bin/mvn sonar:sonar"
    }
    stage('uploadToNexus'){
      sh "${mavenHome}/bin/mvn deploy"
    }
    stage('deployInTomcat'){
        sshagent(['765e1d6b-37ff-4d3b-98c6-c88cb8cf7683']) {
         sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@13.233.95.191:/opt/apache-tomcat-9.0.64/webapps"
        }
    } 
    }
    catch(e){
      currentBuild.result = "FAILED"
      throw e   
    }
    finally{
      slcakNotification(currentBuild.result)
    }
}//node closing

def slcakNotification(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESSFUL'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESSFUL') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}
