pipeline{
  agent{
    label "nodes"
  }
    tools{
      maven "maven3.8.6"
    }
    triggers {
      pollSCM '* * * * *'
    }
    stages{
      stage('getCode'){
        steps{
           slackNotification('STARTED')
           git branch: 'development', credentialsId: '57cfc1ff-9f3e-4f38-b2c7-6b70cab539ff', url: 'https://github.com/AgeswarRaoChenna/maven-web-application.git'
        }
      }//closes get code stage
      stage('buildPackage'){
        steps{
          sh "mvn clean package"
        }     
      }//closes build package stage
      stage('sonarQubeReport'){
        steps{
          sh "mvn sonar:sonar"
        }
      }//closes sonarQube Report stage
      stage('uploadToNexus'){
        steps{
          sh "mvn deploy"
        }
      }//closes upload to nexus
      stage('deployToTomcat'){
        steps{
          sshagent(['765e1d6b-37ff-4d3b-98c6-c88cb8cf7683']) {
            sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@13.232.70.105: /opt/apache-tomcat-9.0.64/webapps"
        }
        }
      }//closes deploy to tomcat server    
    }//closes stages
      post {
        success {
          slackNotification(currentBuild.result)
          //echo "${currentBuild.result}"
        }
        failure {
          slackNotification(currentBuild.result)
        }
      }//closes post
}//closes pipeline
def slackNotification(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}
